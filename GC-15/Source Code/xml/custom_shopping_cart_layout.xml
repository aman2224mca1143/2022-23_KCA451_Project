<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/eight_dp"
        android:paddingEnd="@dimen/eight_dp"
        android:paddingBottom="@dimen/eight_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_blank"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_checked"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="@dimen/eighty_dp"
            android:layout_height="@dimen/hundred_dp"
            android:layout_marginStart="@dimen/eight_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:scaleType="centerInside"
            app:layout_constraintStart_toEndOf="@+id/layoutCheck"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCompany"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:layout_marginEnd="@dimen/eight_dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:text="Company"
            android:textSize="@dimen/ten_sp"
            app:layout_constraintEnd_toStartOf="@+id/tvSize"
            app:layout_constraintStart_toEndOf="@+id/ivLogo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_dp"
            android:layout_marginTop="@dimen/four_dp"
            android:layout_marginEnd="@dimen/eight_dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="2"
            android:text="Product Name"
            android:textColor="@color/colorText"
            android:textSize="@dimen/twelve_sp"
            app:layout_constraintEnd_toStartOf="@+id/tvTotal"
            app:layout_constraintStart_toEndOf="@+id/ivLogo"
            app:layout_constraintTop_toBottomOf="@+id/tvCompany" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="@dimen/sixty_dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_dp"
            android:layout_marginEnd="@dimen/eight_dp"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/colorText"
            android:textSize="@dimen/fourteen_sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/layoutUpdate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/colorText"
            android:textSize="@dimen/twelve_sp"
            app:layout_constraintStart_toEndOf="@+id/ivLogo"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <View
            android:id="@+id/centerView"
            android:layout_width="1dp"
            android:layout_height="@dimen/twelve_sp"
            android:layout_marginStart="@dimen/eight_dp"
            android:background="@color/lightGrey"
            app:layout_constraintBottom_toBottomOf="@+id/tvMrp"
            app:layout_constraintStart_toEndOf="@+id/tvMrp"
            app:layout_constraintTop_toTopOf="@+id/tvMrp" />

        <TextView
            android:id="@+id/tvSaving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/colorText"
            android:textSize="@dimen/twelve_sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvMrp"
            app:layout_constraintStart_toEndOf="@+id/centerView"
            app:layout_constraintTop_toTopOf="@+id/tvMrp" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/colorText"
            android:textSize="@dimen/twelve_sp"
            app:layout_constraintBottom_toBottomOf="@+id/layoutUpdate"
            app:layout_constraintStart_toEndOf="@+id/ivLogo"
            app:layout_constraintTop_toTopOf="@+id/layoutUpdate" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutUpdate"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:layout_marginEnd="@dimen/eight_dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMrp">

            <TextView
                android:id="@+id/tvAdd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shopping_add"
                android:drawableRight="@drawable/ic_round_add_small"
                android:drawablePadding="@dimen/eight_dp"
                android:drawableTint="@color/white"
                android:gravity="center"
                android:paddingStart="@dimen/eight_dp"
                android:paddingTop="@dimen/four_dp"
                android:paddingEnd="@dimen/eight_dp"
                android:paddingBottom="@dimen/four_dp"
                android:text="Add"
                android:textColor="@color/white"
                android:textSize="@dimen/twelve_sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivRemove"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="@dimen/two_dp"
                android:src="@drawable/ic_round_remove_small"
                android:tint="@color/colorPrimary"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/zero_dp"
                android:gravity="center"
                android:paddingStart="@dimen/eight_dp"
                android:paddingEnd="@dimen/eight_dp"
                android:text="1"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sixteen_sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivAdd"
                app:layout_constraintStart_toEndOf="@+id/ivRemove"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivAdd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/two_dp"
                android:src="@drawable/ic_round_add_small"
                android:tint="@color/green"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:background="#EAEAEA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>