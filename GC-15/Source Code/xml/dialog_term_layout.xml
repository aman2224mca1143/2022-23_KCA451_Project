<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_picker_bg">

    <TextView
        android:id="@+id/tvTerm"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/sixteen_dp"
        android:text="@string/term_condition"
        android:textColor="@color/blue"
        android:textSize="@dimen/fourteen_sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:tint="@color/colorText"
        android:padding="@dimen/sixteen_dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTerm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTerm" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E3E3E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTerm" />

    <TextView
        android:id="@+id/tvText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/sixteen_dp"
        android:paddingTop="@dimen/sixteen_dp"
        android:paddingEnd="@dimen/sixteen_dp"
        android:paddingBottom="@dimen/sixteen_dp"
        android:textColor="@color/colorText"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTerm" />

</androidx.constraintlayout.widget.ConstraintLayout>